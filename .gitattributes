*.docx     diff=astextplain
*.DOCX     diff=astextplain
*.dot      diff=astextplain
*.DOT      diff=astextplain
*.pdf      diff=astextplain
*.PDF      diff=astextplain
*.rtf      diff=astextplain
*.RTF      diff=astextplain
*.md       text diff=markdown
*.tex      text diff=tex
*.adoc     text
*.textile  text
*.mustache text
*.csv      text
*.tab      text
*.tsv      text
*.txt      text
*.sql      text
*.ps1      text eol=crlf

# Graphics
#
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.tif      binary
*.tiff     binary
*.ico      binary
*.svg      text
*.eps      binary

# Scripts
#
*.bash     text eol=lf
*.fish     text eol=lf
*.sh       text eol=lf
*.bat      text eol=crlf
*.cmd      text eol=crlf

# Serialisation
#
*.json     text
*.toml     text
*.xml      text
*.yaml     text
*.yml      text

# Archives
#
*.7z       binary
*.gz       binary
*.tar      binary
*.tgz      binary
*.zip      binary

# Text files where line endings should be preserved
#
*.patch    -text

# Specific files
#
Dockerfile text eol=lf

# Exclude files from exporting
#
.gitattributes export-ignore
.gitignore     export-ignore
.gitkeep       export-ignore